{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <h1 class="text-3xl font-bold mb-8">Edit Product</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_label(form.name, 'Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div>
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div>
                    {{ form_label(form.price, 'Price', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.price) }}
                    {{ form_errors(form.price) }}
                </div>

                <div>
                    {{ form_label(form.imageFile, 'Product Image', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.imageFile) }}
                    {{ form_errors(form.imageFile) }}
                    {% if product.image %}
                        <div class="mt-2">
                            <p class="text-sm text-gray-500">Current image:</p>
                            <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" class="mt-1 h-32 w-32 object-cover rounded">
                        </div>
                    {% endif %}
                </div>

                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Update
                    </button>
                    <a href="{{ path('app_product_index') }}" class="text-blue-500 hover:text-blue-700">Back to list</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 